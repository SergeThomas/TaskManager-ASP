@model IEnumerable<TaskMan>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="primary">Task List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Task" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-patch-plus"></i> &nbsp; Add Task
                </a>
        </div>
    </div>


<table class="table table-bordered table-striped" style="width=100%">
    <thead>
        <tr>
            <th>
                Task Number
            </th>
            <th>
                Assigned User
            </th>
            <th>
                Task Details
            </th>
            <th>
                Due Date
            </th>
            <th>
                Date Added
            </th>
            <th>
                Completion Status
            </th>
        </tr>
    </thead>

    <tbody>
        @* iterating through the model we loaded using a for-each loop *@
        @foreach(var obj in Model)
        {
            <tr>
                <td width="10%">
                    @obj.TaskNumber
                </td>
                <td width="30%">
                    @obj.AssignedUser
                </td>
                <td width="50%">
                    @obj.TaskDetails
                </td>
                <td width="30%">
                    @obj.DueDate
                </td>
                <td width="30%">
                    @obj.DateAdded
                </td>
                <td width="30%">
                    @obj.CompletionStatus
                </td>
            </tr>
        }
    </tbody>

</table>
</div>