@model TaskMan

<form method="post" asp-action="Delete">  @* adding explicit action *@
    @Html.HiddenFor(model => model.TaskNumber)      @* this tag allowed files to be edited since form does not send object id *@
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Task</h2>
            <hr />
        </div>
        @* <div asp-validation-summary="All"></div> *@
        <div class="mb-3" >
            <label asp-for="AssignedUser">User Name</label>
            <input asp-for="AssignedUser" class="form-control" />
            <span asp-validation-for="AssignedUser" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="TaskDetails"></label>
            <input asp-for="TaskDetails" class="form-control" />
            <span asp-validation-for="TaskDetails" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DueDate"></label>
            <input asp-for="DueDate" class="form-control" type="date"/>
            <span asp-validation-for="DueDate" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="Task" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

@* adding client side validation as better alternative *@

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}